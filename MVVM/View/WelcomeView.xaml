<UserControl x:Class="Filian.MVVM.View.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Filian.MVVM.View"
             xmlns:viewModel="clr-namespace:Filian.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="630">

    <UserControl.DataContext>
        <viewModel:WelcomeViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Label Foreground="#00ADB5" 
               FontFamily="Comic Sans MS"
               FontSize="50" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center" 
               Content="Welcome!"/>
    </Grid>
</UserControl>
